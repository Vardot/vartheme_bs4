<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-regular-400.woff" as="font" type="font/woff" crossorigin>
<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-regular-400.woff2" as="font" type="font/woff2" crossorigin>
{# Preload Font Awesome free Solid webfonts #}
<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-solid-900.eot" as="font" type="font/eot" crossorigin>

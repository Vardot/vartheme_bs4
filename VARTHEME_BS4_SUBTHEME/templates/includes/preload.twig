<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-solid-900.ttf" as="font" type="font/ttf" crossorigin>
<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-solid-900.woff" as="font" type="font/woff" crossorigin>
<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-solid-900.woff2" as="font" type="font/woff2" crossorigin>
{# Preload Font Awesome free Brands webfonts #}
<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-brands-400.eot" as="font" type="font/eot" crossorigin>
<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-brands-400.svg" as="font" type="font/svg" crossorigin>
<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-brands-400.ttf" as="font" type="font/ttf" crossorigin>
<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-brands-400.woff" as="font" type="font/woff" crossorigin>
<link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/fontawesome-free/webfonts/fa-brands-400.woff2" as="font" type="font/woff2" crossorigin>

{# Example: Preload assets only for LTR languages.
* By adding more restraction or selection for what/when/where to use for preload.
*  --------------------------------------------------------------------------
{% if html_dir == 'ltr' %}
  <link rel="preload" href="{{ VARTHEME_BS4_SUBTHEME_path }}/fonts/lora/lora-v14-latin-regular.woff2" as="font" type="font/woff2" crossorigin>
{%- endif -%}

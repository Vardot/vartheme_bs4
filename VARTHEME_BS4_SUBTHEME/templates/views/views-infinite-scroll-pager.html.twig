{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}
{%
  set infinite_scroll_button_classes = [
    'button',
    'btn',
    'btn-default'
  ]
%}
{% if items.next %}
<ul{{ attributes }}>
  <li class="pager__item">
    <a{{ create_attribute({'class': infinite_scroll_button_classes }) }} href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next">{{ options.button_text }}</a>
  </li>
</ul>
{% endif %}
